generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma_client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model school {
  id        Int    @id @default(autoincrement())
  name      String
  address   String
  latitude  Float
  longitude Float
}
